{
  "name": "ayemail",
  "version": "1.0.0-alpha.2",
  "description": "Secure Electron-based email client",
  "main": "dist-electron/electron/main.js",
  "homepage": "https://ayemail.interactivesites.co.nz",
  "author": "InteractiveSites",
  "license": "MIT",
  "keywords": [
    "email",
    "electron",
    "imap",
    "pop3"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:tsc\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:tsc": "tsc -p electron/tsconfig.json --watch --preserveWatchOutput",
    "dev:electron": "wait-on http://localhost:5173 dist-electron/electron/main.js && electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p electron/tsconfig.json --skipLibCheck",
    "build:mac": "npm run build && electron-builder --mac",
    "build:mac:arm64": "npm run build && electron-builder --mac --arm64",
    "build:mac:x64": "npm run build && electron-builder --mac --x64",
    "build:win": "npm run build && (rm -rf node_modules/node-mac-contacts 2>/dev/null || true) && electron-builder --win && npm install --no-save node-mac-contacts@^1.7.2 2>/dev/null || true",
    "postinstall": "PYTHON=$(which python3.11 || which python3) electron-rebuild -f -w better-sqlite3",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/vue": "^8.1.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/imap": "^0.8.42",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^7.0.3",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^4.0.10",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "happy-dom": "^20.0.10",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.0",
    "vitest": "^4.0.10",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "@heroicons/vue": "^2.2.0",
    "@tiptap/extension-bubble-menu": "^3.10.7",
    "@tiptap/extension-image": "^3.10.7",
    "@tiptap/starter-kit": "^3.10.7",
    "@tiptap/vue-3": "^3.10.7",
    "@types/xml2js": "^0.4.14",
    "better-sqlite3": "^11.7.0",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "gsap": "^3.13.0",
    "imap": "^0.8.19",
    "mailparser": "^3.6.5",
    "nodemailer": "^6.9.7",
    "openpgp": "^5.10.1",
    "pinia": "^3.0.4",
    "poplib": "^0.1.7",
    "vue": "^3.4.0",
    "vue-i18n": "9",
    "vue-tailwind-datepicker": "^1.7.4",
    "xml2js": "^0.6.2"
  },
  "optionalDependencies": {
    "node-mac-contacts": "^1.7.2"
  }
}
